
@{
    Layout = "~/views/Shared/_Layout.cshtml";
}

<div class="row mt-4" ng-app="homeapp" ng-controller="homeController">
    <div class="col-4">
        <h3>Kullanıcılar Listesi</h3>
        <a href="~/User/Add" class="btn btn-sm btn-primary mt-1 mb-3">Kullanıcı Ekle</a>
        <table class="table table-sm table-hover table-bordered">
            <thead>
                <tr>
                    <th>Ad Soyad</th>
                    <th>Role</th>
                    <th>Makale</th>
                    <th>Yorum</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="user in UserList">
                    <td>{{user.nameSurname}}</td>
                    <td>{{user.role}}</td>
                    <td>{{user.articleCount}}</td>
                    <td>{{user.commentCount}}</td>
                </tr>
            </tbody>
        </table>

    </div>
    <div class="col-4">
        <h3>Kategoriler Listesi</h3>
        <a href="~/Category/Add" class="btn btn-sm btn-primary mt-1 mb-3">Kategori Ekle</a>
        <table class="table table-sm table-hover table-bordered">
            <thead>
                <tr>
                    <th>Başlık</th>
                    <th>Makale</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="category in CategoryList">
                    <td>{{category.name}}</td>
                    <td>{{category.articleCount}}</td>
                </tr>
            </tbody>
        </table>

    </div>
    <div class="col-4">
        <h3>Makaleler Listesi</h3>
        <a href="~/Article/Add" class="btn btn-sm btn-primary mt-1 mb-3">Makale Ekle</a>
        <table class="table table-sm table-hover table-bordered">
        <thead>
            <tr>
                <th>Başlık</th>
                <th>Kategori Adı</th>
                <th>Yorum Sayısı</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="article in ArticleList">
                <td>{{article.title}}</td>
                <td>{{article.categoryName}}</td>
                <td>{{article.commentCount}}</td>
            </tr>
        </tbody>
        </table>

    </div>
    
</div>

@section scripts{
    <script src="~/js/pages/home.js"></script>
}
